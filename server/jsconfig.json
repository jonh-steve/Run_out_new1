{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"]
      },
      "checkJs": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/node_modules/*", "dist", "build"]
  }